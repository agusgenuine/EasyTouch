<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.85">

    <LinearLayout
        android:background="@drawable/icon_background"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/add_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/add_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/favor_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_back" />

            <ImageView
                android:id="@+id/add_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/add_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/add_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mutitask_favor_margin"
                android:src="@drawable/ic_add" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>